@model List<Grillbot.Database.Entity.Views.SummarizedCommandLog>;

@{
    ViewData["Title"] = "Kompletní statistiky volání";
    ViewData["Admin"] = true;
}

<section>
    <div class="card mt-2">
        <div class="card-body">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Skupina</th>
                        <th>Příkaz</th>
                        <th class="border-right">Počet volání</th>
                        <th>Konfigurace</th>
                        <th>Počet oprávnění</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Group</td>
                            <td>@item.Command</td>
                            <td class="border-right">@FormatHelper.FormatWithSpaces(item.Count)</td>
                            <td>@(item.Methods.Count == 0 ? "Nenastaveno" : string.Join("\n", item.Methods.Select(o => $"{o.Key} ({o.Value})")))</td>
                            <td>@(item.Methods.Count == 0 ? "-" : FormatHelper.FormatWithSpaces(item.PermissionsCount))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>