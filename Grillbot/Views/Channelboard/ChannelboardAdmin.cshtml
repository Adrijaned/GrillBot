@model ChannelboardViewModel;

@{
    ViewData["Title"] = "Kanály";
}


<div class="mt-2 mr-3 ml-3">
    <div class="d-flex justify-content-center">
        <table class="table table-striped table-sm mt-4 table-bordered" style="width: 1700px">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kanál</th>
                    <th>Server</th>
                    <th>Počet</th>
                    <th>Poslední výskyt</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items.Count == 0)
                {
                    <tr>
                        <th colspan="6" class="text-center">Žádný kanál nezaznamenán.</th>
                    </tr>
                }

                @for(int i = 0; i < Model.Items.Count; i++)
                {
                    var item = Model.Items[i];

                    <tr>
                        <th>@(i + 1)</th>
                        <td>#@item.Channel.Name</td>
                        <td>@(item.GuildChannel?.Guild?.Name ?? "")</td>
                        <td>@item.Count.FormatWithSpaces()</td>
                        <td>@item.LastMessageAt.ToLocaleDatetime()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
