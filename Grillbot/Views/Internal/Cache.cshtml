@model Grillbot.Models.Internal.CacheStatusViewModel;

@{
    ViewData["Title"] = "Cache zpráv";
}

<section class="mt-3">
    <div class="card">
        <div class="card-body">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Server</th>
                        <th>Kanál</th>
                        <th>Počet interní cache</th>
                        <th>Počet externí cache</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CacheData)
                    {
                        <tr>
                            <td>@item.Channel.Guild.Name</td>
                            <td>@item.Channel.Name</td>
                            <td>@FormatHelper.FormatWithSpaces(item.InternalCacheCount)</td>
                            <td>@FormatHelper.FormatWithSpaces(item.MessageCacheCount)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>