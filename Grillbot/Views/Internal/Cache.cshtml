@model Grillbot.Models.Internal.CacheStatusViewModel;

@{
    ViewData["Title"] = "Cache zpráv";
}

<section class="container mt-3">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title mb-0">Cache zpráv</h4>
        </div>

        <div class="card-body">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Server</th>
                        <th>Kategorie</th>
                        <th>Kanál</th>
                        <th>Počet interní cache</th>
                        <th>Počet externí cache</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CacheData)
                    {
                        <tr>
                            <td>@item.Channel.Guild.Name</td>
                            <td>@(item.Channel.Category == null ? "-" : item.Channel.Category.Name)</td>
                            <td>#@item.Channel.Name</td>
                            <td>@item.InternalCacheCount.FormatWithSpaces()</td>
                            <td>@item.MessageCacheCount.FormatWithSpaces()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>