@model List<Grillbot.Database.Entity.Views.SummarizedCommandLog>;

@{
    ViewData["Title"] = "Kompletní statistiky volání";
}

<link rel="stylesheet" href="~/css/callStats.css" />
<table class="top-space table">
    <thead>
        <tr>
            <th>Skupina</th>
            <th>Příkaz</th>
            <th class="bold-right-border">Počet volání</th>
            <th>Konfigurace</th>
            <th>Počet oprávnění</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Group</td>
                <td>@item.Command</td>
                <td class="bold-right-border">@FormatHelper.FormatWithSpaces(item.Count)</td>
                <td>@(item.Methods.Count == 0 ? "Nenastaveno" : string.Join("\n", item.Methods.Select(o => $"{o.Key} ({o.Value})")))</td>
                <td>@(item.Methods.Count == 0 ? "-" : FormatHelper.FormatWithSpaces(item.PermissionsCount))</td>
            </tr>
        }
    </tbody>
</table>